<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rv_item_character_image"
        android:contentDescription="@string/task_edit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/rv_item_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/rv_item_character_image"
        app:layout_constraintTop_toTopOf="@id/rv_item_character_image" />

    <TextView
        android:id="@+id/rv_item_character_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/rv_item_character_name"
        app:layout_constraintStart_toEndOf="@id/rv_item_character_image" />

    <TextView
        android:id="@+id/rv_item_character_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/rv_item_character_species"
        app:layout_constraintStart_toEndOf="@id/rv_item_character_image" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/edit_status_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/character_list_fav_status"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_item_character_name"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>